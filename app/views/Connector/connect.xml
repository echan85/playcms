<?xml version="1.0" encoding="utf-8" ?>
<Connector command="getFiles" resourceType="Image">
<CurrentFolder path="/" url="/">
</CurrentFolder>
<Folders>
	#{list items:folders,as:'folder'}
	<Folder url="${base.path}" path="${base.path}" name="${folder.name}"></Folder>
	#{/list}
</Folders>
<Files>
	#{list items:files,as:'file'}
	<File url="/${base.path.replaceAll('\\\\','/')}/${file.name}" name="${file.name}" size="${file.length()}"/>	
	#{/list}
</Files>

</Connector>